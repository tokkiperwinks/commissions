<!-- Image modal -->
<div class="modal" id="image-modal">
  <img id="modal-img" src="" alt="Full size" />
</div>

<!-- Pricing modal -->
<div id="pricing-modal-backdrop">
  <div id="pricing-card">
    <h1>Animation Pricing Information</h1>
    <p>Here’s a quick breakdown of how my commission pricing works:</p>

    <ul style="list-style: disc; margin-left: 1.5rem; margin-top: 1rem;">
      <li>Animated Loops: $150–$200 depending on complexity.</li>
      <li>Animated Sequence: $200–$300 per sequence, depending on complexity.</li>
	  <li>
          <strong>Animation Types</strong>
          <ul class="list-disc list-inside ml-4">
            <li>Bust-Up: $20+</li>
		    <li>Half-Body: $40+</li>
		    <li>Full-Body: $55+</li>
          </ul>
        </li>
       <p class="rules-note">[Please ask me questions regarding this! I'd be happy to answer!]</p>
    </ul>
    <button id="close-pricing">Close</button>
  </div>
</div>

<script>
/* image modal */
const modal = document.getElementById('image-modal');
const modalImg = document.getElementById('modal-img');
const images = document.querySelectorAll('.square-wrapper img');

images.forEach(img => {
  if (img.src.endsWith(".webp")) {
    img.setAttribute("data-src", img.src);
    const preview = img.src.replace(".webp", "_preview.png");
    img.src = preview;
  }

  img.addEventListener("click", () => {
    const fullSrc = img.dataset.src || img.src;
    modalImg.src = fullSrc;
    modal.classList.add("active");
  });
});

modal.addEventListener("click", () => {
  modal.classList.remove("active");
  setTimeout(() => {
    modalImg.src = "";
  }, 300);
});

/* pricing modal */
const pricingModal = document.getElementById('pricing-modal-backdrop');
const openPricing = document.getElementById('open-pricing');
const closePricing = document.getElementById('close-pricing');

openPricing.addEventListener('click', () => {
  pricingModal.classList.add('active');
  document.body.classList.add('modal-open');
});

closePricing.addEventListener('click', () => {
  pricingModal.classList.remove('active');
  document.body.classList.remove('modal-open');
});

pricingModal.addEventListener('click', e => {
  if (e.target === pricingModal) {
    pricingModal.classList.remove('active');
    document.body.classList.remove('modal-open');
  }
});
</script>
