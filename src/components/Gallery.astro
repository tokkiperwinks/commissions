  </section>
</div>

<div class="modal" id="image-modal">
  <img id="modal-img" src="" alt="Full size" />
</div>

<script>
const modal = document.getElementById('image-modal');
const modalImg = document.getElementById('modal-img');
const images = document.querySelectorAll('.square-wrapper img');

// Freeze GIFs in gallery
images.forEach(img => {
  const src = img.src;
  img.setAttribute("data-gif", src);

  if (src.endsWith(".gif")) {
    const canvas = document.createElement("canvas");
    const ctx = canvas.getContext("2d");
    const still = new Image();
    still.src = src;
    still.onload = () => {
      canvas.width = still.width;
      canvas.height = still.height;
      ctx.drawImage(still, 0, 0, still.width, still.height);
      img.src = canvas.toDataURL("image/png");
    };
  }

  img.addEventListener("click", () => {
    modalImg.src = img.dataset.gif || img.src;
    modal.classList.add("active");
  });
});

modal.addEventListener("click", () => {
  modal.classList.remove("active");
  setTimeout(() => {
    modalImg.src = "";
  }, 300);
});
</script>
