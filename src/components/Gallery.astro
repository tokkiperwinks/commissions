---
import "../styles/colors.css";
---

<style>
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  background: var(--color-bg);
  padding: 0 16px 5vh;
  font-family: 'Fredoka', sans-serif;
  color: var(--color-text);
}

.gallery-wrapper {
  position: relative;
  width: 110%;
  max-width: 1500px;
  margin: 2rem auto 1.5rem;
  padding: 0 0.75rem;
  transform: translateX(-20%);
}

@media (max-width: 768px) {
  .gallery-wrapper {
    transform: translateX(-9px);
    width: 95%;
    padding: 0.75rem;
  }
}

.gallery-container {
  width: 100%;
  max-width: 100%;
  padding: 1rem;
  background: var(--color-bg);
  border-radius: 1rem;
  position: relative;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
}

.gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
  width: 100%;
}

.gallery-shadow {
  position: absolute;
  top: -8px;
  left: -1px;
  width: calc(100% + 1px);
  height: calc(100% + 18px);
  background: var(--color-shadow);
  border-radius: 1rem;
  z-index: 0;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
}

@media (max-width: 768px) {
  .gallery {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 8px;
  }
}

.square-wrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 1 / 1;
  cursor: pointer;
}

.shadow,
.square {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  transition: transform 0.2s ease;
  overflow: hidden;
}

.shadow {
  background: var(--color-shadow);
  transform: translateY(5px);
  z-index: 0;
}

.square {
  z-index: 1;
}

.square img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: filter 0.3s ease;
}

.square-wrapper:hover .square {
  transform: translateY(-3px);
}

.square-wrapper:hover .shadow {
  transform: translateY(8px);
}

/* NSFW blur */
.square img[data-nsfw="true"] {
  filter: blur(14px);
}

.square-wrapper[data-nsfw="true"] .square::after {
  content: "⚠ NSFW • Click to View";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 0.9rem;
  z-index: 2;
  border-radius: 12px;
  text-align: center;
  padding: 0.4rem;
  pointer-events: none;
  backdrop-filter: blur(20px) contrast(1.2);
}

.square-wrapper[data-nsfw="true"]::before {
  content: "NSFW";
  position: absolute;
  top: 6px;
  left: 6px;
  background: var(--color-danger);
  color: var(--color-danger-text);
  font-size: 10px;
  padding: 2px 4px;
  border-radius: 4px;
  z-index: 3;
  font-weight: bold;
}

.modal {
  position: fixed;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(6px);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.5rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 100;
  overflow: hidden;
}

.modal img {
  max-width: 100%;
  max-height: 100%;
  border-radius: 12px;
  opacity: 0;
  transform: scale(0.95);
  transition: opacity 0.3s ease, transform 0.3s ease;
  object-fit: contain;
}

.modal.active {
  opacity: 1;
  pointer-events: auto;
}

.modal.active img {
  opacity: 1;
  transform: scale(1);
}

.separator {
  width: 100%;
  margin: 4vh auto;
  border: none;
  border-top: 3px dashed var(--color-border-light);
}

@media (max-width: 768px) {
  .modal {
    padding: 0;
  }
  .modal img {
    max-width: 100vw;
    max-height: 100vh;
    border-radius: 0;
    transform: none !important;
  }
}

/* Pricing button */
.pricing-btn {
  display: block;
  margin: 1rem auto 0;
  margin-bottom: 1rem;
  padding: 0.8rem 1.6rem;
  font-family: 'Fredoka', sans-serif;
  font-size: 1.1rem;
  font-weight: bold;
  border: none;
  border-radius: 0.5rem;
  background: var(--color-border);
  color: var(--social-text-color);
  cursor: pointer;
  transition: background 0.2s ease;
}
.pricing-btn:hover {
  background: var(--color-subheading);
}

/* Pricing modal */
#pricing-modal-backdrop {
  position: fixed;
  inset: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0,0,0,0.6);
  backdrop-filter: blur(8px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
  transition: opacity 0.4s ease;
  opacity: 0;
  pointer-events: none;
}
#pricing-modal-backdrop.active {
  opacity: 1;
  pointer-events: auto;
}
#pricing-card {
  max-width: 50rem;
  max-height: 85vh;
  width: 90vw;
  padding: 2rem;
  border-radius: 1rem;
  background: var(--color-bg);
  border: 5px solid var(--color-border);
  box-shadow: 0 8px 24px rgba(0,0,0,0.2);
  font-family: 'Fredoka', sans-serif;
  overflow-y: auto;
  z-index: 201;
}
#pricing-card h1 {
  font-size: 1.75rem;
  margin-bottom: 1rem;
}
#close-pricing {
  margin-top: 1.5rem;
  padding: 0.7rem 1.4rem;
  background: var(--color-border);
  color: var(--social-text-color);
  border: none;
  border-radius: 0.5rem;
  font-size: 1rem;
  cursor: pointer;
  font-family: 'Fredoka', sans-serif;
}
#close-pricing:hover {
  background: var(--color-subheading);
}

.rules-note {
  margin-top: 0.25rem;
  font-style: italic;
  font-size: 0.85rem;
  color: var(--color-text-light);
}

</style>

