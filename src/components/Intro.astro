---
import "../styles/colors.css";
import Slots from "../components/Slots.astro";
---

<style>
.intro-wrapper {
  position: relative;
  width: 100%;
  max-width: 500px;
  margin: 2rem auto 1.5rem;
  padding: 0 0.75rem;
  transform: translateX(-14%);
}

	@media (max-width: 768px) {
		.intro-wrapper {
		transform: translateX(-9px);
		}
	}

.intro-shadow {
  position: absolute;
  top: -8px; /* extend shadow above */
  left: -1px; /* extend shadow left */
  width: calc(100% + 1px); /* full width with shadow on sides */
  height: calc(100% + 18px); /* full height with shadow top and bottom */
  background: var(--color-shadow);
  border-radius: 1rem;
  z-index: 0;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); /* outline all sides */
}

.intro-container {
  position: relative;
  padding: 1rem 1.25rem;
  background-color: var(--color-bg);
  border-radius: 1rem;
  font-family: 'Fredoka', sans-serif;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
}

.intro-heading {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  text-align: center;
  color: var(--color-text);
}

.intro-subheading {
  font-size: 1rem;
  font-weight: 400;
  color: var(--color-text-light);
  line-height: 1.5;
  text-align: center;
  margin-bottom: 1rem;
}

.tokkigif {
  width: 100%;
  max-width: 300px;
  display: flex;
  justify-content: center;
  margin-bottom: 1rem;
  filter: var(--tokkigif);
}

.tokkigif img {
  width: 100%;
  height: auto;
  object-fit: contain;
  border-radius: 1rem;
}

.social-buttons {
  display: flex;
  flex-direction: column;   /* stack vertically */
  align-items: center;      /* center buttons horizontally */
  gap: 1.25rem;
  width: 100%;
  max-width: 400px;
  margin: 0 auto;
}

/* Social button */
.social-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  background: var(--color-shadow);
  color: var(--social-text-color);
  border-radius: 9999px;
  padding: 0.75rem 1rem;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: transform 0.2s ease;
  white-space: nowrap;
  text-decoration: none;
  width: 100%;
  max-width: 350px;
  position: relative;   /* ðŸ‘ˆ add this */
}

.social-button:hover {
  transform: scale(1.02);
}

.social-button .icon {
  width: 1.25rem;
  height: 1.25rem;
  display: block;
  filter: var(--social-icon-filter);
}

.social-text {
  color: var(--social-text-color);
  text-align: center;
}

.copy-tooltip {
  position: absolute;
  bottom: 120%; /* place above button */
  left: 50%;
  transform: translateX(-50%) translateY(-10px); /* slight offset */
  background: var(--color-tooltip);
  color: var(--color-tooltip-text);
  font-size: 0.9rem;       /* bigger text */
  font-weight: 600;
  padding: 0.6rem 1rem;    /* bigger box */
  border-radius: 0.75rem;  /* rounder corners */
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.25s ease, transform 0.25s ease;
  white-space: nowrap;
  z-index: 10;
}

.copy-tooltip.show {
  opacity: 1;
  transform: translateX(-50%) translateY(-50%); /* float upward */
}

.copy-tooltip::after {
  content: "";
  position: absolute;
  top: 90%;
  left: 50%;
  transform: translateX(-50%);
  border-width: 12px;
  border-style: solid;
  border-color: var(--color-tooltip) transparent transparent transparent;
}
</style>

<div class="intro-wrapper">
  <div class="intro-shadow"></div>
  <section class="intro-container">
    <h1 class="intro-heading">Welcome to my commissions page!</h1>
    <div class="tokkigif"><img src="evil tokki.gif" alt="3" /></div>
    <p class="intro-subheading">
      Hihi!! Welcome and thank you for your interest in my art!<br>
      This site is only for price listings and artwork samples,<br>
      please contact me through discord only!<br>
      I will get to you as soon as possible!<br><br>
      
      Check out my Twitter for more artworks! I dont post all of<br>
      them here :o)
    </p>

    <div class="social-buttons">
	  <!-- Twitter -->
	  <a href="https://x.com/tokkiperiwinkle" target="_blank" class="social-button oblong-button" aria-label="Twitter">
		<img src="twitter.svg" alt="Twitter" class="icon" />
		<span class="social-text">@tokkiperiwinkle</span>
	  </a>

	  <!-- Discord -->
	  <a href="#" id="discord-button" class="social-button oblong-button" aria-label="Discord">
		<img src="discord.svg" alt="Discord" class="icon" />
		<span class="social-text">tokkiperiwinkle</span>
		<div id="tooltip" class="copy-tooltip">Copied Username!</div>
	  </a>

	  <!-- Terms of Service -->
		<a href="#" id="terms-button" class="social-button oblong-button" aria-label="Terms of Service">
		  <img src="gavel.svg" alt="Terms" class="icon" />
		  <span class="social-text">Terms of Service</span>
		</a>
	  <!-- <Slots /> -->
	</div>
  </section>
</div>

<script is:global>
  document.addEventListener("DOMContentLoaded", () => {
    /* === Discord copy button === */
    const discordBtn = document.getElementById("discord-button");
    const tooltip = document.getElementById("tooltip");

    if (discordBtn && tooltip) {
      discordBtn.addEventListener("click", (e) => {
        e.preventDefault();
        navigator.clipboard.writeText("tokkiperiwinkle")
          .then(() => {
            tooltip.classList.add("show");
            setTimeout(() => tooltip.classList.remove("show"), 1200);
          })
          .catch(err => console.error("Clipboard error:", err));
      });
    }

    /* === Terms of Service modal === */
    const acceptBtn = document.getElementById("acceptBtn");
    const modal = document.getElementById("modal");
    const termsBtn = document.getElementById("terms-button");

    if (modal && acceptBtn) {
      // Show modal immediately on first load
      document.body.classList.add("modal-open");

      // Accept button closes modal
      acceptBtn.addEventListener("click", () => {
        modal.classList.add("fade-out");
        modal.addEventListener("transitionend", () => {
          modal.classList.add("modal-hidden");
          modal.classList.remove("fade-out");
          document.body.classList.remove("modal-open");
        }, { once: true });
      });
    }

    if (termsBtn && modal) {
      // Terms button reopens modal
      termsBtn.addEventListener("click", (e) => {
        e.preventDefault();
        modal.classList.remove("modal-hidden", "fade-out");
        document.body.classList.add("modal-open");
      });
    }
  });
</script>

