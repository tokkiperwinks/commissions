---
import "../styles/colors.css";
import Slots from "../components/Slots.astro";
---

<style>
.intro-wrapper {
  position: relative;
  width: 100%;
  max-width: 500px;
  margin: 2rem auto 1.5rem;
  padding: 0 0.75rem;
  transform: translateX(-14%);
}

	@media (max-width: 768px) {
		.intro-wrapper {
		transform: translateX(-9px);
		}
	}

.intro-shadow {
  position: absolute;
  top: -8px; /* extend shadow above */
  left: -1px; /* extend shadow left */
  width: calc(100% + 1px); /* full width with shadow on sides */
  height: calc(100% + 18px); /* full height with shadow top and bottom */
  background: var(--color-shadow);
  border-radius: 1rem;
  z-index: 0;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); /* outline all sides */
}

.intro-container {
  position: relative;
  padding: 1rem 1.25rem;
  background-color: var(--color-bg);
  border-radius: 1rem;
  font-family: 'Fredoka', sans-serif;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
}

.intro-heading {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  text-align: center;
  color: var(--color-text);
}

.intro-subheading {
  font-size: 1rem;
  font-weight: 400;
  color: var(--color-text-light);
  line-height: 1.5;
  text-align: center;
  margin-bottom: 1rem;
}

.tokkigif {
  width: 100%;
  max-width: 300px;
  display: flex;
  justify-content: center;
  margin-bottom: 1rem;
  filter: var(--tokkigif);
}

.tokkigif img {
  width: 100%;
  height: auto;
  object-fit: contain;
  border-radius: 1rem;
}

/* Social buttons */
.social-buttons {
  display: flex;
  justify-content: center;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.social-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--color-shadow);
  color: var(--color-text-inverted);
  border-radius: 9999px;
  padding: 0.5rem 0.9rem;
  font-size: 0.8rem;
  font-weight: 500;
  cursor: pointer;
  transition: transform 0.2s ease;
  white-space: nowrap;
  text-decoration: none;
  position: relative;
}

.social-button:hover {
  transform: scale(1.05);
}

.social-button .icon {
  width: 1.25rem;
  height: 1.25rem;
  object-fit: contain;
  display: block;
}

.copy-tooltip {
  position: absolute;
  top: -2.5rem;
  left: 50%;
  transform: translateX(-50%);
  background: var(--color-tooltip);
  color: var(--color-tooltip-text);
  padding: 0.4rem 0.6rem;
  font-size: 0.7rem;
  border-radius: 0.5rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  white-space: nowrap;
  z-index: 10;
}

.copy-tooltip.show {
  opacity: 1;
}

.copy-tooltip::after {
  content: "";
  position: absolute;
  top: 90%;
  left: 50%;
  transform: translateX(-50%);
  border-width: 12px;
  border-style: solid;
  border-color: var(--color-tooltip) transparent transparent transparent;
}

/* Mobile adjustments */
@media (max-width: 768px) {
  .social-buttons {
    flex-direction: column;
    align-items: center;
    width: 80%;
    transform: translateX(-10%);
	
  }
  .social-button {
    width: 100%;
    justify-content: center;
    text-align: center;
  }
}
</style>

<div class="intro-wrapper">
  <div class="intro-shadow"></div>
  <section class="intro-container">
    <h1 class="intro-heading">Welcome to my commissions page!</h1>
    <div class="tokkigif"><img src="evil tokki.gif" alt="3" /></div>
    <p class="intro-subheading">
      Hihi!! Welcome and thank you for your interest in my art!<br>
      This site is only for price listings and artwork samples,<br>
      please contact me through discord only!<br>
      I will get to you as soon as possible!<br><br>
      
      Check out my Twitter for more artworks! I dont post all of<br>
      them here :o)
    </p>

    <div class="social-buttons">
      <!-- Twitter -->
      <a href="https://x.com/tokkiperiwinkle" target="_blank" class="social-button oblong-button" aria-label="Twitter">
        <img src="twitter.svg" alt="Twitter" class="icon" />
        <span class="social-text">@tokkiperiwinkle</span>
      </a>

      <!-- Discord -->
      <a href="#" id="discord-button" class="social-button oblong-button" aria-label="Discord">
        <img src="discord.svg" alt="Discord" class="icon" />
        <span class="social-text">tokkiperiwinkle</span>
        <div id="tooltip" class="copy-tooltip">Copied Username!</div>
      </a>
	  <!-- <Slots /> -->
    </div>
  </section>
</div>

<script is:global>
  document.addEventListener("DOMContentLoaded", () => {
    const discordBtn = document.getElementById("discord-button");
    const tooltip = document.getElementById("tooltip");

    if (discordBtn && tooltip) {
      discordBtn.addEventListener("click", (e) => {
        e.preventDefault();
        navigator.clipboard.writeText("tokkiperiwinkle")
          .then(() => {
            tooltip.classList.add("show");
            setTimeout(() => tooltip.classList.remove("show"), 1200);
          })
          .catch(err => console.error("Clipboard error:", err));
      });
    }
  });
</script>
